{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@examples/types": ["libs/types/src/index.ts"],
      "@examples/smartystreets": ["libs/smartystreets/src/index.ts"],
      "@examples/ui": ["libs/ui/src/index.ts"],
      "@examples/my-test-lib": ["libs/my-test-lib/src/index.ts"],
      "@examples/my-test-lib2": ["libs/my-test-lib2/src/index.ts"]
    }
  },
  "angularCompilerOptions": {
    "strictTemplates": true
  },
  "exclude": ["node_modules", "tmp"]
}
